<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="character"
            type="io.audioshinigami.core.network.responses.characters.Character" />

        <variable
            name="viewModel"
            type="io.audioshinigami.characters_list.list.CharactersListViewModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:onClick="@{ () -> viewModel.openCharacterDetail( character.id) }"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/character_list_item_card_radius"
        app:cardElevation="@dimen/character_list_item_card_elevation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/character_image"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/character_name"
                app:url="@{ character.image }"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                tools:srcCompat="@tools:sample/avatars"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/character_name"
                android:text="@{ character.name }"
                app:layout_constraintTop_toBottomOf="@id/character_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Summer"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>